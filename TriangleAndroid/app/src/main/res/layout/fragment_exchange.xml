<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.fardan7eghlim.tri.Views.Home.Fragments.ExchangeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="5"
            android:background="@color/silver"
            android:gravity="center"
            android:text="بازار ارز و سکه"
            android:textColor="@color/black"
            android:textSize="@dimen/s4_font_size" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/btn_coin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="5"
                android:background="@drawable/rounded_gray"
                android:gravity="center"
                android:text="سکه"
                android:textColor="@color/black"
                android:textSize="@dimen/s4_font_size" />

            <TextView
                android:id="@+id/btn_currancy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="5"
                android:background="@drawable/rounded_gray"
                android:gravity="center"
                android:text="ارز"
                android:textColor="@color/black"
                android:textSize="@dimen/s4_font_size" />


        </LinearLayout>

        <TextView
            android:id="@+id/txt_last_update_exchange"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/s6_font_size"
            android:layout_weight="5"
            android:gravity="center"
            android:text="آخرین به روز رسانی"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="@dimen/sss_font_size" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <ListView
            android:id="@+id/lv_list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/btn_exchange_refresh"
        android:layout_marginLeft="@dimen/x1_font_size"
        android:layout_marginBottom="@dimen/font_size"
        android:layout_gravity="bottom"
        android:layout_width="@dimen/x2_font_size"
        android:layout_height="@dimen/x2_font_size">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:src="@drawable/triangle_a"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:padding="@dimen/font_size"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:src="@drawable/btn_refresh"/>

    </FrameLayout>

</FrameLayout>
