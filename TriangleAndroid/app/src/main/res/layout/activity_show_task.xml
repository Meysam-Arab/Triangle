<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_bg_taskDlg"
    android:background="#84253539"
    tools:context="ir.fardan7eghlim.tri.Views.Task.ShowTaskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/s6_font_size"
        android:layout_marginRight="@dimen/s6_font_size"
        android:padding="@dimen/s5_font_size"
        android:background="@drawable/rounded_blue1"
        android:orientation="vertical">

        <ir.fardan7eghlim.tri.Models.widgets.customTextView
            android:id="@+id/txt_type_taskDlg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="نوع"
            android:textColor="@color/colorPrimaryWhite"
            android:textDirection="rtl"
            android:textSize="@dimen/sss_font_size"
            android:textStyle="bold" />

        <ir.fardan7eghlim.tri.Models.widgets.customTextView
            android:id="@+id/txt_description_taskDlg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s4_font_size"
            android:gravity="center"
            android:text="توضیحات"
            android:textColor="@color/drp_blue"
            android:textDirection="rtl"
            android:textSize="@dimen/s4.1_font_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s4_font_size"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:weightSum="100">

            <ir.fardan7eghlim.tri.Models.widgets.customTextView
                android:id="@+id/txt_t_dateFrom_taskDlg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:gravity="center"
                android:text="از تاریخ:"
                android:textColor="@color/drp_gray"
                android:textDirection="rtl"
                android:textSize="@dimen/s4.1_font_size"
                android:textStyle="bold" />

            <ir.fardan7eghlim.tri.Models.widgets.customTextView
                android:id="@+id/txt_dateFrom_taskDlg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:gravity="center"
                android:text="..."
                android:textColor="@color/colorPrimaryWhite"
                android:textDirection="rtl"
                android:textSize="@dimen/s4_font_size"
                android:textStyle="bold" />

            <ir.fardan7eghlim.tri.Models.widgets.customTextView
                android:id="@+id/txt_t_dateTotaskDlg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:gravity="center"
                android:text="تا:"
                android:textColor="@color/drp_gray"
                android:textDirection="rtl"
                android:textSize="@dimen/s4.1_font_size"
                android:textStyle="bold" />

            <ir.fardan7eghlim.tri.Models.widgets.customTextView
                android:id="@+id/txt_dateTotaskDlg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:gravity="center"
                android:text="..."
                android:textColor="@color/colorPrimaryWhite"
                android:textDirection="rtl"
                android:textSize="@dimen/s4_font_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s5_font_size"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:weightSum="100">

            <ir.fardan7eghlim.tri.Models.widgets.customTextView
                android:id="@+id/txt_t_timeFrom_taskDlg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:gravity="center"
                android:text="از ساعت:"
                android:textColor="@color/drp_gray"
                android:textDirection="rtl"
                android:textSize="@dimen/s4.1_font_size"
                android:textStyle="bold" />

            <ir.fardan7eghlim.tri.Models.widgets.customTextView
                android:id="@+id/txt_timeFrom_taskDlg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:gravity="center"
                android:text="..."
                android:textColor="@color/colorPrimaryWhite"
                android:textDirection="rtl"
                android:textSize="@dimen/s4_font_size"
                android:textStyle="bold" />

            <ir.fardan7eghlim.tri.Models.widgets.customTextView
                android:id="@+id/txt_t_timeTotaskDlg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:gravity="center"
                android:text="تا:"
                android:textColor="@color/drp_gray"
                android:textDirection="rtl"
                android:textSize="@dimen/s4.1_font_size"
                android:textStyle="bold" />

            <ir.fardan7eghlim.tri.Models.widgets.customTextView
                android:id="@+id/txt_timeTotaskDlg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:gravity="center"
                android:text="..."
                android:textColor="@color/colorPrimaryWhite"
                android:textDirection="rtl"
                android:textSize="@dimen/s4_font_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/font_size"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:weightSum="100">

            <ir.fardan7eghlim.tri.Models.widgets.customTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:gravity="center"
                android:text="یادآوری:"
                android:textColor="@color/drp_blue"
                android:textDirection="rtl"
                android:textSize="@dimen/s4.1_font_size"
                android:textStyle="bold" />

            <ir.fardan7eghlim.tri.Models.widgets.customTextView
                android:id="@+id/txt_reminder_taskDlg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:gravity="center"
                android:text="..."
                android:textColor="@color/colorPrimaryWhite"
                android:textDirection="rtl"
                android:textSize="@dimen/s4_font_size"
                android:textStyle="bold" />
        </LinearLayout>

        <ir.fardan7eghlim.tri.Models.widgets.customCheckBox
            android:id="@+id/chBx_alarm_taskDlg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s4.1_font_size"
            android:layoutDirection="rtl"
            android:text="پخش شدن صدای آلارم برای یادآوری"
            android:textColor="@color/colorPrimaryWhite"
            android:textDirection="rtl" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/font_size"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:weightSum="10">

            <ir.fardan7eghlim.tri.Models.widgets.customButton
                android:id="@+id/btn_edit_taskDlg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="3"
                android:background="@drawable/rounded_gray2"
                android:text="ویرایش"
                android:textColor="@color/colorPrimaryWhite" />

            <ir.fardan7eghlim.tri.Models.widgets.customButton
                android:id="@+id/btn_delete_taskDlg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="3"
                android:background="@drawable/rounded_gray2"
                android:text="پاک"
                android:textColor="@color/colorPrimaryWhite" />

            <ir.fardan7eghlim.tri.Models.widgets.customButton
                android:id="@+id/btn_cancel_taskDlg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="4"
                android:background="@drawable/rounded_gray2"
                android:text="بیخیال"
                android:textColor="@color/colorPrimaryWhite" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
