<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_ca_box_note"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s6_font_size"
        android:layout_marginBottom="@dimen/s6_font_size"
        android:paddingLeft="@dimen/s5_font_size"
        android:layout_marginLeft="@dimen/s5_font_size"
        android:layout_marginRight="@dimen/s5_font_size"
        android:paddingRight="@dimen/s5_font_size"
        android:orientation="vertical"
        android:background="@drawable/rounded_note">
        <ir.fardan7eghlim.tri.Models.widgets.customTextView
            android:id="@+id/txt_ca_title_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="right"
            android:text="عنوان"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/drp_orange2"
            android:textDirection="rtl"
            android:textSize="@dimen/sss_font_size" />
        <ir.fardan7eghlim.tri.Models.widgets.customTextView
            android:id="@+id/txt_ca_date_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="right"
            android:text="تاریخ"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/drp_gray"
            android:textDirection="rtl"
            android:textSize="@dimen/s5_font_size" />
        <ir.fardan7eghlim.tri.Models.widgets.customTextView
            android:id="@+id/txt_ca_description_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/s6_font_size"
            android:gravity="right"
            android:text="شرح"
            android:ellipsize="end"
            android:maxLength="1000"
            android:maxLines="10"
            android:textColor="@color/gray"
            android:textDirection="rtl"
            android:textSize="@dimen/s4_font_size" />
    </LinearLayout>
    <ImageView
        android:id="@+id/img_paperclip_note"
        android:layout_width="@dimen/s3.1_font_size"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:adjustViewBounds="true"
        android:layout_marginLeft="@dimen/s3.1_font_size"
        android:src="@drawable/paperclip"/>
</FrameLayout>
